<!--    sau khi đk thành công thì cập nhật lại user_id cho otp đó-->
    <update id="updateUserIdByEmailAndOtp">
        UPDATE user_otp
        SET user_id = #{userId}
        WHERE email = #{email}
        AND otp_code = #{otpCode}
        AND is_deleted = 1
